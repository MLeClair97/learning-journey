{
  "name": "Python 3.11 (Portfolio)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  },
  "forwardPorts": [8501, 8888],
  "postCreateCommand": "python -m pip install -U pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi && mkdir -p data",
  "postStartCommand": "[ -f create_db.py ] && python create_db.py || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
